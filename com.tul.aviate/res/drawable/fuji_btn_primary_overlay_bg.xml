<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@integer/abc_config_activityShortDur"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fuji_btn_radius" />
            <solid android:color="@color/fuji_btn_primary_overlay_pressed" />
            <padding android:top="@dimen/fuji_btn_vertical_padding" android:bottom="@dimen/fuji_btn_vertical_padding" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fuji_btn_radius" />
            <solid android:color="@color/fuji_btn_overlay_disabled" />
            <padding android:top="@dimen/fuji_btn_vertical_padding" android:bottom="@dimen/fuji_btn_vertical_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fuji_btn_radius" />
            <solid android:color="@color/fuji_btn_primary_overlay" />
            <padding android:top="@dimen/fuji_btn_vertical_padding" android:bottom="@dimen/fuji_btn_vertical_padding" />
        </shape>
    </item>
</selector>