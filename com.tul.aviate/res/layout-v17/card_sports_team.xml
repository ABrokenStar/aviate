<?xml version="1.0" encoding="utf-8"?>
<merge android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/team_logo" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/SportsTeam.team_logo" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/team_logo" android:layout_centerVertical="true" android:layout_toEndOf="@id/team_logo">
            <com.yahoo.cards.android.ui.TypefaceTextView android:id="@id/team_place_name" android:layout_marginLeft="@dimen/cards_content_padding" android:text="City" style="@style/Cards.l2" />
            <com.yahoo.cards.android.ui.TypefaceTextView android:id="@id/team_mascot_name" android:layout_marginLeft="@dimen/cards_content_padding" android:text="Mascot" style="@style/Cards.l1" />
        </LinearLayout>
        <com.yahoo.cards.android.ui.TypefaceTextView android:gravity="right" android:id="@id/team_score" android:text="9" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/Cards.l1" />
        <ImageView android:id="@id/team_status" android:visibility="invisible" android:layout_marginRight="@dimen/sports_card_status_padding" android:src="@drawable/sports_team_final" android:layout_toLeftOf="@id/team_score" android:layout_centerVertical="true" android:layout_toStartOf="@id/team_score" style="@style/SportsTeamActionIcon" />
    </RelativeLayout>
</merge>